def calculate_score_similarity(x, y, matrix):
    score = 0
    count = 0

    for i in range(len(x)):
        col = matrix[0].index(x[i])
        row = matrix[0].index(y[i])
        score += matrix[col][row+1]

        if x[i] == y[i]:
            count += 1

    similarity = count / len(x) * 100

    return score, similarity

x = "SEQUENCE_X"
y = "SEQUENCE_Y"
score, similarity = calculate_score_similarity(x, y, BLOSUM62)

print("Score:", score)
print("Similarity:", similarity, "%")


# According to the calculation results, humans and cats are the closest relatives.
